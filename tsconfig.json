{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "test"
    ],
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src/**/**.ts",
    "test/**/**.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
